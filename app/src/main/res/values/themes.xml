<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Baeumeinwien" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Modern Splash Screen Theme -->
    <style name="Theme.Baeumeinwien.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Baeumeinwien</item>
    </style>
</resources>
